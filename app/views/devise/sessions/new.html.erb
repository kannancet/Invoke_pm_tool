   <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => "form-signin"}) do |f| %>
         <legend>Sign in</legend>

        <div class="control-group">
        <%= f.label :email, :class => "control-label", :for => "email" %>
            <div class="controls">
                <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Enter email"  %>
            </div>
        </div>
        <div class="control-group">
            <%= f.label :password, :class => "control-label", :for => "password" %>
            <div class="controls">
            <%= f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "Enter password"  %>
            </div>
        </div>
        <label class="checkbox">
            <%= f.check_box :remember_me %><%= f.label :remember_me %></label>
            <%= f.submit "Sign in", :class => "btn btn-large btn-primary btn-block" %>
            <hr class="featurette-divider">
            <%= render "devise/shared/links" %>
    <% end %>



