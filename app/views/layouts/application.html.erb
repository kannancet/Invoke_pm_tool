    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Invoke PM tool" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
